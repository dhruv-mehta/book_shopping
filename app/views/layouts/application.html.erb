<!DOCTYPE html>
<html lang='en'>
<head>
		<title>Pragprog Books Online Store</title> 
		<%= stylesheet_link_tag "application" %> <%= javascript_include_tag "application" %> 
		<%= csrf_meta_tag %>
</head>
	<body class="<%= controller.controller_name %>">
				<div id="banner">
				<%= image_tag("images.png" ,  :align=> "left" , size: "40") %>
				<%= @page_title || " BookShopping" %>
				</div>
	
<div id="columns">
<div id="side">

<% if current_page?(:controller => 'store', :action => 'index') %>

		<div id="cart">
					<%= render :partial => 'carts/cart' %>
		</div>

<% end %>
		
		<% if session[:user_id] !=nil %>
		<ul>
				<li><%= link_to "Home", root_path %></li>
				<li><a href="http://www..../faq">Questions</a></li> 
				<li><a href="http://www..../news">News</a></li> 
				<li><%= link_to "logout",session_path(session[:user_id]), :method => :delete %></li>
		
		</ul> 

		<% else %>
					<ul><li><%= link_to "login here",new_session_path %></li></li></ul>

		<% end %>
</div>
<div id="main"> 
				<%= yield %>
				 </div>
  </div>
</body>
</html>