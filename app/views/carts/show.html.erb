<% if notice %>
		<p id="notice"><%= notice %></p>
 <% end %>

<h2>Your Pragmatic Cart</h2> 
<ul>
<table border="0" width="50%" height="50%" class="table">
<% @cart.line_items.each do |item| %> 

 
		<tr>
			<td><%= item.quantity %> &times; <%= item.product.title %></td>
			<td><%= number_to_currency(item.total_price, :unit => "$") %></td>
		</tr>

	
<% end %>	
	<tr>
				<td>Total Price:</td>
				<td>-------------</td>
	</tr>	
	<tr>
				<td></td>
				<td><%= number_to_currency(@cart.total_price, :unit => "$") %></td>
	</tr>

</table>
		<%= button_to 'Empty Cart', @cart, method: :delete,
    		data: { confirm: 'are you sure?'} %>

</ul>
