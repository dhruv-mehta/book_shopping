<% if notice %>

<p id="notice"><%= notice %></p> 

<% end %>
<h1>Your Catalog</h1>
<% @products.each do |product| %>
<div class="entry">
<%= image_tag(product.image_url) %> <h3><%= product.title %><br><br><%= sanitize(product.description) %></h3>
 <div class="price_line">
<span class="price"><%= number_to_currency(product.price, :unit => "$") %></span> </div>


<%= button_to 'Add to Cart', line_items_path(product_id: product) , :remote => true %>

</div>
<% end %>